<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/perfil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.main.PerfilActivity">

    <!-- Separador Azul Arriba -->
    <LinearLayout
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Titulo Mi cuenta -->
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mi Cuenta"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/searchBar"
        app:layout_constraintEnd_toEndOf="@id/searchBar"
        app:layout_constraintBottom_toBottomOf="@id/searchBar"
        android:layout_margin="15dp"/>

    <!-- Datos del perfil -->
    <LinearLayout
        android:id="@+id/contenedorPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp"
        app:layout_constraintTop_toBottomOf="@id/searchBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Intro / descripción -->
        <TextView
            android:id="@+id/txtIntro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aquí puedes ver los datos asociados a tu cuenta."
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/darkGray"
            android:gravity="center"
            android:layout_marginBottom="25dp"/>

        <TextView
            android:id="@+id/pNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre: "
            android:textSize="20sp"
            android:textColor="@color/darkGray"/>

        <TextView
            android:id="@+id/pApellido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apellido: "
            android:textSize="20sp"
            android:textColor="@color/darkGray"/>

        <TextView
            android:id="@+id/pCorreo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correo: "
            android:textSize="20sp"
            android:textColor="@color/darkGray"/>

        <TextView
            android:id="@+id/pTelefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teléfono: "
            android:textSize="20sp"
            android:textColor="@color/darkGray"/>
    </LinearLayout>

    <!-- Cerrar Sesión-->
    <TextView
        android:id="@+id/cerrarSesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cerrar Sesión"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginBottom="50dp"
        app:layout_constraintStart_toStartOf="@id/contenedorPerfil"
        app:layout_constraintEnd_toEndOf="@id/contenedorPerfil"
        app:layout_constraintBottom_toTopOf="@id/separadorMenu"/>

    <!-- MENU ABAJO  -->
    <!-- Separador Azul Menú  -->
    <LinearLayout
        android:id="@+id/separadorMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="38dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Inicio - Inicio Publicaciones -->
    <ImageButton
        android:id="@+id/btnInicio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:src="@drawable/inicio"
        app:layout_constraintStart_toStartOf="@id/separadorMenu"
        app:layout_constraintEnd_toStartOf="@id/btnMisPublicabiones"
        app:layout_constraintTop_toTopOf="@id/separadorMenu"
        android:layout_marginTop="15dp"/>

    <!-- Mis Publicaciones - Editar -->
    <ImageButton
        android:id="@+id/btnMisPublicabiones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:src="@drawable/editar"
        app:layout_constraintStart_toEndOf="@id/btnInicio"
        app:layout_constraintTop_toTopOf="@id/separadorMenu"
        app:layout_constraintEnd_toStartOf="@id/btnAddPublicacion"
        android:layout_marginTop="15dp"/>

    <!-- Añadir Publicacion - Plus -->
    <ImageButton
        android:id="@+id/btnAddPublicacion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:src="@drawable/plus"
        app:layout_constraintStart_toEndOf="@id/btnMisPublicabiones"
        app:layout_constraintEnd_toStartOf="@id/btnVerMiPerfil"
        app:layout_constraintTop_toTopOf="@id/separadorMenu"
        android:layout_marginTop="15dp"/>

    <!-- Ver Perfil - user -->
    <ImageButton
        android:id="@+id/btnVerMiPerfil"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:src="@drawable/user"
        app:layout_constraintStart_toEndOf="@id/btnAddPublicacion"
        app:layout_constraintEnd_toEndOf="@id/separadorMenu"
        app:layout_constraintTop_toTopOf="@id/separadorMenu"
        android:layout_marginTop="15dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>