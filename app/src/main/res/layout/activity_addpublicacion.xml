<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.main.AddpublicacionActivity">

    <!-- Separador Azul Arriba -->
    <LinearLayout
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Titulo Añadir Publicacion -->
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Añadir Publicación"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/searchBar"
        app:layout_constraintEnd_toEndOf="@id/searchBar"
        app:layout_constraintBottom_toBottomOf="@id/searchBar"
        android:layout_margin="15dp"/>

    <!-- MENU ABAJO  -->
    <!-- Separador Azul Menú  -->
    <LinearLayout
        android:id="@+id/separadorMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="38dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <EditText
        android:id="@+id/tipo_alqui"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="¿Que alquilas? Ej: Casa"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@+id/searchBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="40dp"/>

    <EditText
        android:id="@+id/ubicaion_alqui"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ubicación"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@+id/tipo_alqui"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="40dp"/>

    <ImageView
        android:id="@+id/imagen_alqui"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="40dp"
        android:scaleType="centerCrop"
        android:background="@android:color/darker_gray"
        android:contentDescription="Imagen de la publicación"
        app:layout_constraintTop_toBottomOf="@+id/ubicaion_alqui"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/id_button"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="100dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/black"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:text="Seleccionar Imagen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imagen_alqui"/>


    <!-- Inicio - Inicio Publicaciones -->
    <EditText
        android:id="@+id/descripcion_alqui"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="32dp"
        android:hint="Descripción"
        android:padding="12dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_button" />

    <ImageButton
        android:id="@+id/btnInicio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:src="@drawable/inicio"
        app:layout_constraintStart_toStartOf="@id/separadorMenu"
        app:layout_constraintEnd_toStartOf="@id/btnMisPublicabiones"
        app:layout_constraintTop_toTopOf="@id/separadorMenu"
        android:layout_marginTop="15dp"/>

    <!-- Mis Publicaciones - Editar -->
    <ImageButton
        android:id="@+id/btnMisPublicabiones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:src="@drawable/editar"
        app:layout_constraintStart_toEndOf="@id/btnInicio"
        app:layout_constraintTop_toTopOf="@id/separadorMenu"
        app:layout_constraintEnd_toStartOf="@id/btnAddPublicacion"
        android:layout_marginTop="15dp"/>

    <!-- Añadir Publicacion - Plus -->
    <ImageButton
        android:id="@+id/btnAddPublicacion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:src="@drawable/plus"
        app:layout_constraintStart_toEndOf="@id/btnMisPublicabiones"
        app:layout_constraintEnd_toStartOf="@id/btnVerMiPerfil"
        app:layout_constraintTop_toTopOf="@id/separadorMenu"
        android:layout_marginTop="15dp"/>

    <!-- Ver Perfil - user -->
    <ImageButton
        android:id="@+id/btnVerMiPerfil"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:src="@drawable/user"
        app:layout_constraintStart_toEndOf="@id/btnAddPublicacion"
        app:layout_constraintEnd_toEndOf="@id/separadorMenu"
        app:layout_constraintTop_toTopOf="@id/separadorMenu"
        android:layout_marginTop="15dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>